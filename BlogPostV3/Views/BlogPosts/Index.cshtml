@model IEnumerable<BlogPostV3.Models.BlogPost>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "Create")
    }

</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contenido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Autor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.publicacion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Contenido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Autor)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.publicacion)
        </td>
        <td>
            @if (User.Identity.Name.Equals(item.Autor))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) <span>|</span>
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }) <span>|</span>
                @Html.ActionLink("Crear Comentario", "Create", "Comentarios", new { Id = item.Id }, new { }) <span>|</span>
            }
            @Html.ActionLink("Details", "Details", new { id = item.Id })

        </td>
    </tr>
}

</table>
